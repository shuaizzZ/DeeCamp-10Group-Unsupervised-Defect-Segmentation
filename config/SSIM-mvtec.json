{
    "model": {
        "name": "SSIM_Net",
        "code_dim": 256,
        "img_channel": 3,
        "fp16": false
    },
    "op": {
        "loss": "Multi_SSIM_loss",
        "window_size":[3, 7, 15],

        "start_epoch": 0,
        "max_epoch": 200,
        "snapshot": 10,
        "learning_rate": 4e-3,
        "decay_rate": 10,
        "epoch_steps": [50, 150]
    },
    "db": {
        "name": "mvtec",
        "data_dir": "D:/DataSet/mvtec_anomaly_detection",
        "loader_threads": 4,
        "train_split": "train",
        "val_split": "test",
        "resize": [256, 256],
        "batch_size": 16
    },
    "system": {
        "resume": false,
        "resume_path": "",
        "finetune": false,
        "finetune_path": "",
        "save_dir": "./weights/"
    }
}
